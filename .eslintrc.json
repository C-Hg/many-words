{
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "airbnb", "prettier/react", "prettier/babel", "plugin:mocha/recommended", "plugin:prettier/recommended"],
  "plugins": ["react", "react-hooks", "mocha", "prettier"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "prettier/prettier": "error",
    "no-console": ["error", { "allow": ["warn", "info", "error", "debug"] }]
  }
}
