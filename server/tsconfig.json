{
    "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "lib": ["ES2018","ScriptHost"],
    // Don't emit; allow Babel to transform files.
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src/",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
    },
    "include": [
        "src/**/*"
    ]
}