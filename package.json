{
  "name": "many-words",
  "version": "0.0.1",
  "description": "A WebApp to help you learn foreign languages vocabulary",
  "main": "index.js",
  "scripts": {
    "build_and_move": "cd client && npm run build && cd ../tools && node insert_build.js",
    "client": "cd client && npm start",
    "configure:all": "cd tools && node prepare_all.js",
    "counter": "cd tools && npm run word_counter",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../tools && npm install",
    "prepare:all": "npm run configure:all && cd .. && npm run build_client_and_replace",
    "test": "npm run test:client && npm run test:seeder",
    "test:client": "cd client && npm run mocha-test",
    "test:seeder": "cd tools/database_seeder && mocha",
    "seeder": "cd tools && npm run database_seeder",
    "server": "cd server && nodemon server.js",
    "start": "concurrently \"npm run server\" \"npm run client\""
    
  },
  "author": "Camille HAGENBOURGER",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "mocha": "^5.2.0",
    "prettier": "^1.17.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/C-Hg/many-words"
  }
}
